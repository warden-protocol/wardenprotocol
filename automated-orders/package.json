{
  "name": "warden-automated-orders",
  "version": "1.0.0",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm lint && tsc --build --force --verbose",
    "lint": "eslint --ext .ts --ignore-path .eslintignore .",
    "build:blockchain-lib": "pnpm -F @warden-automated-orders/blockchain build",
    "build:aws-kms-signer": "pnpm -F @warden-automated-orders/aws-kms-signer build",
    "build:utils": "pnpm -F @warden-automated-orders/utils build",
    "build:libs": "pnpm build:utils && pnpm build:aws-kms-signer && pnpm build:blockchain-lib",
    "build:scheduler": "pnpm -F @warden-automated-orders/scheduler build",
    "build:relayer": "pnpm -F @warden-automated-orders/relayer build",
    "scheduler": "pnpm -F @warden-automated-orders/scheduler start",
    "relayer": "pnpm -F @warden-automated-orders/relayer start"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/node": "^22.15.24"
  }
}
