git_root := `git rev-parse --show-toplevel`
tmpdir := `mktemp -d`

all: pricepred stoicquote arbitraryhttp

_tools:
    @command -v solc >/dev/null 2>&1 || (echo "solc not found. Please install solc. On MacOS, you can use 'brew install solidity'." && exit 1)
    go install github.com/ethereum/go-ethereum/cmd/abigen

arbitraryhttp: _tools
  solc --abi --bin --overwrite handlers/arbitraryhttp/ArbitraryHttp.sol -o build
  abigen \
  --bin=build/ArbitraryHttp.bin \
  --abi=build/ArbitraryHttp.abi \
  --pkg=generated \
  --type=ArbitraryHttp \
  --out=handlers/arbitraryhttp/generated/arbitraryhttp_bindings.go

pricepred: _tools
  solc --abi --bin --overwrite handlers/pricepred/PricePredictor.sol -o build
  abigen \
  --bin=build/PricePredictor.bin \
  --abi=build/PricePredictor.abi \
  --pkg=pricepred \
  --type=PricePredictor \
  --out=handlers/pricepred/pricepred_bindings.go
  